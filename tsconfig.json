{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "es2015",
      "es2017",
      "DOM.Iterable"
    ],
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~components": [
        "src/components"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~definitions": [
        "src/definitions"
      ],
      "~definitions/*": [
        "src/definitions/*"
      ],
      "~images": [
        "src/images"
      ],
      "~images/*": [
        "src/images/*"
      ],
      "~types": [
        "src/types"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~pages": [
        "src/pages"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~hooks": [
        "src/hooks"
      ],
      "~hooks/*": [
        "src/hooks/*"
      ],
      "~libs": [
        "src/libs"
      ],
      "~libs/*": [
        "src/libs/*"
      ],
      "~styles": [
        "src/styles"
      ],
      "~styles/*": [
        "src/styles/*"
      ]
    },
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
